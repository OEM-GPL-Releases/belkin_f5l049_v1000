#!/bin/sh

PATH=/bin:/sbin:/usr/bin:/usr/sbin:/usr/local/bin:/usr/local/sbin
export PATH

# =======================================================
# =  Main shutdown start                                =
# =======================================================
sleep 1

if [ -x /etc/rc.d/rc.picshare ]; then
  . /etc/rc.d/rc.picshare stop
fi

if [ -x /etc/rc.d/rc.mdns ]; then
  . /etc/rc.d/rc.mdns stop
fi

if [ -x /etc/rc.d/rc.jcpd ]; then
  . /etc/rc.d/rc.jcpd stop
fi

if [ -x /etc/rc.d/rc.thttpd ]; then
  . /etc/rc.d/rc.thttpd stop
fi

if [ -x /etc/rc.d/rc.crond ]; then
  . /etc/rc.d/rc.crond stop
fi

if [ -x /etc/rc.d/rc.sntp ]; then
  . /etc/rc.d/rc.sntp stop
fi

if [ -x /etc/rc.d/rc.samba ]; then
  . /etc/rc.d/rc.samba stop
fi

if [ -x /etc/rc.d/rc.vsftpd ]; then
  . /etc/rc.d/rc.vsftpd stop
fi

if [ -x /etc/rc.d/rc.hotplug ]; then
  . /etc/rc.d/rc.hotplug stop

	echo "0 0 1 3 0 0 0" > "/proc/silex/led/1"
	echo "0 0 1 3 0 0 0" > "/proc/silex/led/2"
	echo "0 0 1 3 0 0 0" > "/proc/silex/led/3"
	echo "0 0 1 3 0 0 0" > "/proc/silex/led/4"
fi

if [ -x /etc/rc.d/rc.sxuptp ]; then
  . /etc/rc.d/rc.sxuptp stop
fi

if [ -x /etc/rc.d/rc.syslog ]; then
  . /etc/rc.d/rc.syslog stop
fi

if [ -x /etc/rc.d/rc.inetd ]; then
  . /etc/rc.d/rc.inetd stop
fi

if [ -x /etc/rc.d/rc.niclink ]; then
  . /etc/rc.d/rc.niclink stop
fi

if [ -x /etc/rc.d/rc.network ]; then
  . /etc/rc.d/rc.network stop
fi

if [ -x /etc/rc.d/rc.atheros ]; then
  . /etc/rc.d/rc.atheros ath0 stop
  . /etc/rc.d/rc.atheros eth0 stop
fi

if [ -x /etc/rc.d/rc.usbstorage ]; then
  . /etc/rc.d/rc.usbstorage stop
fi
